<%- include("header") -%>



    <div class="box" id="heading">
    <h1><%= kindofday %></h1>
    </div>
    <!-- <h2>add the notes to list</h2> -->
    <div class="box">
    
        
        <% itms.forEach(function(itm){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="chbx" value="<%= itm._id %>">
                    <P><%= itm.name %></P>
                </div>
                <input type="hidden" name="listname" value="<%=kindofday%>">
            </form>
        <% }) %>
                
        <form action="/" method="post" class="item">
            <input type="text" name="addnew" id="addnew"placeholder="New Iteam" autocomplete="off">
            <br>
            <button type="submit" name="list" value="<%= kindofday %>">+</button>
        </form>
    </div>

<%- include("footer")-%>

    
